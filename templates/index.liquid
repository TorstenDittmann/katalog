<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <title>{{ title }}</title>
    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }
        katalog-preview {
            display: block;
            padding: 1rem;
            background-color: #f3f3f3;
            border: 1px lightgray solid;
        }
        .katalog-container {
            display: grid;
            grid-template-columns: 16em 1fr;
            grid-template-rows: 200px 1fr;
            gap: 0px 0px;
            grid-template-areas:
                "logo header"
                "nav content";
        }
        .katalog-logo {
            grid-area: logo;
            display: grid;
            place-items: center;
            border: 1px solid lightgrey;
        }
        .katalog-header {
            grid-area: header;
            background-color: #f02e65;
        }
        .katalog-nav {
            grid-area: nav;
        }
        .close-nav,
        .open-nav {
            display:none;
        }
        @media (max-width: 640px) {
            .katalog-container {
                grid-template-columns: 1fr;
                grid-template-rows: 1fr;
                gap: 0px 0px;
                grid-template-areas:
                    "logo"
                    "header"
                    "nav"
                    "content";
            }
            .katalog-nav {
                height: 100vh;
                width: 100vw;
                position: absolute;
                background-color: white;
                display: none;
                z-index: 999;
            }
            .katalog-nav:target {
                display: block;
            }
            .close-nav,
            .open-nav {
                display:initial;
            }
        }
        .katalog-content {
            grid-area: content;
            overflow: auto;
            max-height: calc(100vh - 200px);
        }
        .katalog-content .katalog-content-inner {
            max-width: 64em;
            padding: 1.5rem;
        }
        .katalog-nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
        .katalog-nav li strong {
            padding: 1rem .5rem;
        }
        .katalog-nav li a {
            display: block;
            color: #000;
            padding: 1rem 1rem;
            text-decoration: none;
        }
        .katalog-nav li a:hover,
        .katalog-nav [aria-current='page'] {
            background-color: #f02e65;
            color: white;
        }
        .u-hide {
            display: none;
        }
    </style>
</head>

<body>
    <div class="katalog-container">
        <div class="katalog-logo">
            <a href="#nav" class="open-nav">Menu</a>
            <a class="p-navigation__item" href="#">
                <img class="p-navigation__image"
                    src="/_assets/{{ logoSrc }}" alt="Canonical"
                    width="95" />
            </a>
        </div>
        <div class="katalog-header">
            {% comment %} <form id="search" class="p-search-box u-no-margin--bottom">
                <input 
                    list="ice-cream-flavors" 
                    type="search" 
                    class="p-search-box__input" 
                    name="q" 
                    placeholder="Search documentation" 
                    required=""
                    autocomplete="on" />
                <datalist id="ice-cream-flavors">
                    {% for page in pages %}
                        {% if page.pages %}
                            {% for sub in page.pages %}
                                <option value="{{sub.path}}" label="{{sub.title}}">
                            {% endfor %}
                        {% else %}
                            <option value="{{page.path}}" label="{{page.title}}">
                        {% endif %}
                    {% endfor %}
                </datalist>
                <button type="reset" class="p-search-box__reset" name="close">
                    <i class="p-icon--close">Close</i>
                </button>
                <button type="submit" class="p-search-box__button" name="submitSearch">
                    <i class="p-icon--search">Search</i>
                </button>
            </form> {% endcomment %}
        </div>
        <div class="katalog-nav" id="nav">
            <a href="#" class="close-nav">close</a>
            <ul>
                {% for page in pages %}
                    {% if page.pages %}
                    <li>
                        <strong>{{ page.title }}</strong>
                        <ul>
                            {% for sub in page.pages %}
                                <li>
                                    <a {% if sub.path == currentPage %}aria-current="page" href="#"{% else %} href="{{ sub.path }}"{% endif %}>{{ sub.title }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                    {% else %}
                    <li>
                        <a {% if page.path == currentPage %}aria-current="page" href="#"{% else %} href="{{ page.path }}"{% endif %}>{{ page.title }}</a>
                    </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
        <div class="katalog-content">
            <div class="katalog-content-inner">
            {{ body }}
            </div>
        </div>
    </div>
    <script>
        window.STYLESHEETS = [
            {% for style in stylesheets %}'{{ style }}',{% endfor %}
        ];
    </script>
    <script type="module" src="/_runtime/index.js"></script>
</body>
</html>